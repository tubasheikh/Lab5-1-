@model IEnumerable<Lab5_1_.Models.Author>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center display-4">Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                <a class="btn" asp-action="Edit" asp-route-id="@item.AuthorId">Edit</a> 
                <a class="btn" asp-action="Details" asp-route-id="@item.AuthorId">Details</a> 
                <a class="btn" asp-action="Delete" asp-route-id="@item.AuthorId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
