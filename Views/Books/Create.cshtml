@model Lab5_1_.Models.Book

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center display-4">Create</h1>

<h4>Book</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <!--textboxes for the input feilds required to create a record-->
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AuthorId" class="control-label"></label>
                <!-- drop down box which has its content populated form data in the data table-->
                <select asp-for="AuthorId" class="form-control" asp-items="ViewBag.AuthorId"></select>
            </div>
            <div class="form-group">
                <!-- submit button to craete the record-->
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
